<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.unicauca.workflow.RegisterController"
            prefWidth="400" prefHeight="600"
            style="-fx-background-color: #004AAD;">
    
    <!-- Contenedor blanco -->
    <VBox alignment="CENTER" spacing="15"
          layoutX="50" layoutY="40"
          prefWidth="300" prefHeight="520"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
        
        <!-- Logo de la universidad -->
        <ImageView fitHeight="80" fitWidth="80"
                   preserveRatio="true"
                   image="@logo_unicauca.png" />
        
        <!-- Título -->
        <Label text="Registro"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #B30000;" />
        
        <!-- Subtítulo -->
        <Label text="Complete los datos del nuevo usuario"
               style="-fx-font-size: 12px; -fx-text-fill: #444;" />
        
        <!-- Campos de texto -->
        <TextField fx:id="txtNombre" promptText="Nombre completo *" prefWidth="250"/>
        <TextField fx:id="txtApellidos" promptText="Apellidos *" prefWidth="250"/>
        <TextField fx:id="txtPrograma" promptText="Programa *" prefWidth="250"/>
        <TextField fx:id="txtCorreo" promptText="Correo institucional *" prefWidth="250"/>
        
        <!-- Selección de rol -->
        <HBox alignment="CENTER" spacing="15">
            <RadioButton fx:id="rbEstudiante" text="Soy Estudiante" selected="true"/>
            <RadioButton fx:id="rbDocente" text="Soy Docente"/>
        </HBox>
        
        <!-- Contraseña -->
        <PasswordField fx:id="txtContrasena" promptText="Contraseña *" prefWidth="250"/>
        <PasswordField fx:id="txtConfirmar" promptText="Confirmar contraseña *" prefWidth="250"/>
        
        <!-- Botón registrar -->
        <Button text="REGISTRAR USUARIO"
                prefWidth="200"
                onAction="#handleRegistro"
                style="-fx-background-color: #001F54; -fx-text-fill: white; -fx-font-weight: bold;" />
    </VBox>
</AnchorPane>
