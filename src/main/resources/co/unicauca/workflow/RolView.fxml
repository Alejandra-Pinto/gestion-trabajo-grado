<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="804.0" prefWidth="1552.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.unicauca.workflow.RolController">
   <children>
      <Pane layoutX="0.0" layoutY="0.0" prefHeight="804.0" prefWidth="1552.0" style="-fx-background-color: #0F3EA4;">
         <effect>
            <InnerShadow />
         </effect>
         <children>
            <!-- Header -->
            <HBox layoutX="0.0" layoutY="0.0" prefHeight="120.0" prefWidth="1552.0"
                  alignment="CENTER_LEFT" style="-fx-padding: 10;">
               <ImageView fitHeight="85.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@images/logo.png" />
                  </image>
               </ImageView>
               <Pane HBox.hgrow="ALWAYS" />
               <Button onAction="#handleLogout"
                       style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-border-color: white; -fx-border-width: 1; -fx-border-radius: 5;"
                       text="Cerrar Sesión" />
            </HBox>

            <!-- Split -->
            <SplitPane fx:id="splitPane" dividerPositions="0.3"
                       layoutY="120.0" prefHeight="684.0" prefWidth="1552.0">
              <items>
                <!-- Panel izquierdo -->
                <AnchorPane prefWidth="427.0">
                     <children>
                        <ImageView fitHeight="176.0" fitWidth="480.0" layoutY="505.0" preserveRatio="true">
                           <image>
                              <Image url="@images/bandera.png" />
                           </image>
                        </ImageView>
                        <ToggleButton fx:id="btnRol" layoutX="3.0"
                                      prefHeight="101.0" prefWidth="453.0"
                                      text="Docente" textFill="#111f63" onAction="#onBtnRolClicked">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                           <graphic>
                              <ImageView fitHeight="51.0" fitWidth="51.0" preserveRatio="true">
                                 <image>
                                    <Image url="@images/gente2.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </ToggleButton>
                     </children>
                  </AnchorPane>

                <!-- Panel derecho -->
                <AnchorPane fx:id="contentPane" prefWidth="1067.0">
                     <children>
                        <VBox alignment="TOP_CENTER" layoutX="200.0" layoutY="80.0" spacing="25" prefWidth="600">
                           
                           <!-- Título -->
                           <Label text="Información Personal"
                                  style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #0F3EA4;" />

                           <!-- Tarjeta rol -->
                           <HBox alignment="CENTER" spacing="15"
                                 style="-fx-background-color: #f5f5f5; -fx-border-color: #ccc; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">
                              <ImageView fitHeight="60" fitWidth="60" preserveRatio="true">
                                 <image>
                                    <Image url="@images/user.png"/>
                                 </image>
                              </ImageView>
                              <Label fx:id="lblTipo" text="-" 
                                     style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                           </HBox>

                           <!-- Información detallada -->
                           <GridPane hgap="30" vgap="20">
                              <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0" 
                                     style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                              <Label fx:id="lblNombre" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1"
                                     style="-fx-font-size: 16px; -fx-text-fill: #444;"/>

                              <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" 
                                     style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                              <Label fx:id="lblEmail" text="-" GridPane.rowIndex="1" GridPane.columnIndex="1"
                                     style="-fx-font-size: 16px; -fx-text-fill: #444;"/>

                              <Label text="Programa:" GridPane.rowIndex="2" GridPane.columnIndex="0" 
                                     style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                              <Label fx:id="lblPrograma" text="-" GridPane.rowIndex="2" GridPane.columnIndex="1"
                                     style="-fx-font-size: 16px; -fx-text-fill: #444;"/>

                              <Label text="Rol:" GridPane.rowIndex="3" GridPane.columnIndex="0" 
                                     style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                              <Label fx:id="lblRol" text="-" GridPane.rowIndex="3" GridPane.columnIndex="1"
                                     style="-fx-font-size: 16px; -fx-text-fill: #444;"/>
                           </GridPane>
                        </VBox>
                     </children>
                  </AnchorPane>
              </items>
            </SplitPane>
         </children>
      </Pane>
   </children>
</AnchorPane>
