<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.unicauca.workflow.BaseLayoutController">

    <top>
        <HBox style="-fx-background-color: #0F3EA4; -fx-padding: 10; -fx-alignment: center;">
            <ImageView fitHeight="60.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@images/logo.png" />
                </image>
            </ImageView>

            <Pane HBox.hgrow="ALWAYS" />

            <Button onAction="#handleLogout" style="-fx-background-color: #0F3EA4; -fx-text-fill: white; -fx-font-weight: bold;" text="Salir" />
        </HBox>
    </top>

    <center>
        <VBox fx:id="mainContainer" style="-fx-background-color: white;" />
    </center>
</BorderPane>