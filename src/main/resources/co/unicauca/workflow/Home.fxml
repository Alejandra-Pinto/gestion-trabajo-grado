<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="804.0" prefWidth="1552.0"
            xmlns="http://javafx.com/javafx/24.0.1" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.unicauca.workflow.HomeController">

   <children>
      <Pane layoutX="0.0" layoutY="0.0" prefHeight="804.0" prefWidth="1552.0" style="-fx-background-color: #0F3EA4;">
         <effect>
            <InnerShadow />
         </effect>
         <children>

            <!-- Header con logo y botón de logout -->
            <HBox alignment="CENTER_LEFT" layoutX="0.0" layoutY="0.0" prefHeight="120.0" prefWidth="1552.0" style="-fx-padding: 10;">
               <ImageView fitHeight="85.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@images/logo.png" />
                  </image>
               </ImageView>

               <Pane HBox.hgrow="ALWAYS" />

               <Button onAction="#handleLogout"
                       style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-border-color: white; -fx-border-width: 1; -fx-border-radius: 5;"
                       text="Cerrar Sesión" />
            </HBox>

            <!-- Split principal -->
            <SplitPane fx:id="splitPane" dividerPositions="0.3" layoutY="120.0" prefHeight="684.0" prefWidth="1552.0">
              <items>
                <!-- Panel Izquierdo con botones -->
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="682.0" prefWidth="427.0">
                     <children>
                        <!-- Botón Rol (único visible al inicio) -->
                        <ToggleButton fx:id="btnRol" layoutX="3.0" mnemonicParsing="false"
                                      prefHeight="101.0" prefWidth="453.0"
                                      text="Rol" textFill="#111f63" visible="true"
                                      onAction="#onBtnRolClicked">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                           <graphic>
                              <ImageView fitHeight="51.0" fitWidth="51.0" preserveRatio="true">
                                 <image>
                                    <Image url="@images/gente2.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </ToggleButton>

                        <!-- Docente -->
                        <ToggleButton fx:id="btnFormatoDocente" layoutX="3.0" layoutY="103.0"
                                      prefHeight="101.0" prefWidth="453.0"
                                      text="Formato propuesta Docente" visible="false"
                                      onAction="#onBtnFormatoDocenteClicked"/>

                        <ToggleButton fx:id="btnAnteproyectoDocente" layoutX="3.0" layoutY="206.0"
                                      prefHeight="101.0" prefWidth="453.0"
                                      text="Anteproyecto Docente" visible="false"/>

                        <!-- Estudiante -->
                        <ToggleButton fx:id="btnFormatoEstudiante" layoutX="3.0" layoutY="309.0"
                                      prefHeight="101.0" prefWidth="453.0"
                                      text="Formato propuesta Estudiante" visible="false"
                                      onAction="#onBtnFormatoEstudianteClicked"/>

                        <ToggleButton fx:id="btnAnteproyectoEstudiante" layoutX="3.0" layoutY="412.0"
                                      prefHeight="101.0" prefWidth="453.0"
                                      text="Anteproyecto Estudiante" visible="false"/>

                        <!-- Coordinador -->
                        <ToggleButton fx:id="btnEvaluarPropuestas" layoutX="3.0" layoutY="515.0"
                                      prefHeight="101.0" prefWidth="453.0"
                                      text="Evaluar propuestas" visible="false"
                                      onAction="#onBtnEvaluarPropuestasClicked"/>

                        <ToggleButton fx:id="btnEvaluarAnteproyectos" layoutX="3.0" layoutY="618.0"
                                      prefHeight="101.0" prefWidth="453.0"
                                      text="Evaluar anteproyectos" visible="false"
                                      onAction="#onBtnEvaluarAnteproyectosClicked"/>
                     </children>
                  </AnchorPane>

                <!-- Panel Derecho -->
                <AnchorPane fx:id="contentPane" minHeight="0.0" minWidth="0.0" prefHeight="682.0" prefWidth="1067.0">
                     <children>
                        <ImageView fitHeight="651.0" fitWidth="271.0" layoutX="443.0" layoutY="34.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/antorcha.png" />
                           </image>
                        </ImageView>
                     </children>
                  </AnchorPane>
              </items>
            </SplitPane>
         </children>
      </Pane>
   </children>
</AnchorPane>
